extends ../layout

block append nav-links
  li: a(href="/feed") Feed
  li.active: a(href="/photos/new") Upload

block append nav-right-links
  li: a(href="/logout") Logout

block append content
  .container
    .row
      .col-md-4.col-md-offset-4
        .panel.panel-default
          .panel-heading
            h3.panel-title Upload a photo
          .panel-body
            if(error != '')
              .alert.alert-danger
                strong Error! #{error}
            form(accept-charset="UTF-8", role="form", action="/photos/create", method="post", enctype="multipart/form-data")
              fieldset
                .form-group
                  input.form-control(name="image", type="file")
                input.btn.btn-lg.btn-success.btn-block(type="submit", value="Upload")
